# StockAI - Advanced Portfolio Management System
# Copy this file to .env and update with your actual values

# ===================================
# AI & LangChain Configuration (NEW)
# ===================================
# Required for AI-powered agent orchestration
OPENAI_API_KEY=your_openai_api_key_here

# Financial Datasets API (for advanced market data)
# Get your key at: https://financialdatasets.ai
FINANCIAL_DATASETS_API_KEY=your_financial_datasets_api_key_here

# ===================================
# Alpaca Trading API Configuration
# ===================================
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_API_SECRET=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ===================================
# Application Configuration
# ===================================
APP_NAME=StockAI
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/stockai.log

# Stock Configuration
STOCK_LIST=AAPL,TSLA,GOOGL,MSFT,AMZN

# Trading Configuration
CONFIDENCE_THRESHOLD=60.0
BASE_QUANTITY=100
MAX_QUANTITY=500
CYCLE_INTERVAL=60
INITIAL_CASH=100000.0
MAX_POSITION_PERCENT=0.20

# Risk Management
RISK_MULTIPLIER_LOW=1.2
RISK_MULTIPLIER_HIGH=0.5

# Database Configuration
DATABASE_URL=postgresql://stockai:stockai_password@localhost:5432/stockai

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Model Configuration
ENSEMBLE_MODEL_PATHS=models/trained_rl_model_sac.pkl,models/trained_rl_model_ppo.pkl,models/trained_rl_model_a2c.pkl,models/trained_rl_model_dqn.pkl,models/trained_rl_model_td3.pkl

# External APIs (Optional)
NEWS_API_KEY=your_news_api_key_here

# ===================================
# LangChain/LangGraph Configuration
# ===================================
# Model selection for AI agents
LANGCHAIN_MODEL=gpt-4o
LANGCHAIN_TEMPERATURE=0.0

# Enable/disable agent reasoning display
SHOW_AGENT_REASONING=true
